<Window x:Class="Lab_Humeniuk.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab_Humeniuk"
        mc:Ignorable="d"
        Title="Розрахунок віку та знаків зодіаку" Height="300" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Виберіть дату народження:" Margin="5"/>
            <DatePicker SelectedDate="{Binding BirthDate}" Margin="5"/>
            <Button Content="Розрахувати"  Click="Calculate_Click" Margin="5"/>
            <TextBlock Text="{Binding AgeText}" Margin="5" FontWeight="Bold"/>
            <TextBlock Text="Західний знак зодіаку:" Margin="5"/>
            <TextBlock Text="{Binding WesternZodiac}" Margin="5" FontWeight="Bold"/>
            <TextBlock Text="Китайський знак зодіаку:" Margin="5"/>
            <TextBlock Text="{Binding ChineseZodiac}" Margin="5" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>
